{
    // Window 
    "window.restoreFullscreen": true,
    "window.newWindowDimensions": "maximized",
    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "window.menuBarVisibility": "compact",
    "window.zoomLevel": 1,

    // Workbench 
    "workbench.startupEditor": "none",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.tree.indent": 16, "workbench.colorCustomizations": {
        "editorCursor.foreground": "#ffd800",
    },
    "workbench.editor.empty.hint": "hidden",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Remedy - Dark (Straight)",

    // Editor 
    "editor.smoothScrolling": true,
    "editor.rulers": [80],
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.minimap.enabled": false,
    "editor.mouseWheelZoom": true,
    "editor.codeLens": false,
    // "editor.fontFamily": "'Victor Mono', 'Fantasque Sans Mono', 'JetBrainsMono NF'",
    "editor.fontFamily": "JetBrains Mono NL",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.lineNumbers": "relative",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.renderLineHighlight": "line",
    "editor.wordWrap": "off",
    "editor.tabCompletion": "on",
    "editor.tabSize": 4,
    "editor.wordBasedSuggestions": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.suggest.showKeywords": true,
    "editor.detectIndentation": false,
    "editor.cursorBlinking": "solid",
    "editor.cursorSurroundingLines": 10,
    // "editor.cursorSmoothCaretAnimation": "on",
    "editor.snippetSuggestions": "inline",
    "editor.accessibilitySupport": "off",

    // Terminal 
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.env.windows": {},
    "terminal.integrated.env.linux": {},

    // Emmet
    "emmet.showSuggestionsAsSnippets": true,
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "javascriptreact",
        "php": "html"
    },
    "settingsSync.keybindingsPerPlatform": false,

    // File types
    "javascript.suggest.autoImports": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.suggest.paths": false,
    "[javascript]": {
        "editor.tabSize": 4,
    },
    "[javascriptreact]": {
        "editor.tabSize": 2
    },
    "typescript.suggest.autoImports": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.suggest.paths": false,
    "[typescript]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "[css]": {
        "editor.tabSize": 4
    },
    "[php]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
    },
    "python.analysis.autoImportCompletions": true,
    "[python]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "ms-python.python"
    },
    "css.enabledLanguages": [
        "html",
        "php"
    ],

    /* Vim settings */
    "vim.ignorecase": false,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.duration": 80,
    "vim.scroll": 10,
    "vim.leader": "<Space>",
    "vim.useSystemClipboard": true,
    "vim.timeout": 300,
    "vim.cursorStylePerMode.insert": "block",
    "vim.cursorStylePerMode.normal": "block",
    "vim.cursorStylePerMode.visual": "block",
    "vim.cursorStylePerMode.visualblock": "block",
    "vim.cursorStylePerMode.visualline": "block",
    "vim.cursorStylePerMode.replace": "block",
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.surround": true,
    "vim.sneak": true,
    "vim.foldfix": true,

    /* Vim keybinds */
    "vim.normalModeKeyBindingsNonRecursive": [
        // gd, gh - built in
        {
            "before": [ "g", "r" ],
            "commands": [
                "editor.action.goToReferences"
            ]
        },
        {
            "before": [ "<leader>", "w" ],
            "commands": [
                ":w"
            ]
        },
        {
            "before": [ "<leader>", "f", "f"],
            "commands": ["editor.action.formatDocument"],
        },
        {
            "before": [ "<leader>", "f", "p" ],
            "commands": [ "prettier.forceFormatDocument" ]
        },
        {
            "before": [ "<leader>", "z" ],
            "commands": [ "workbench.action.toggleZenMode" ]
        },
        {
            "before": [ "Y" ],
            "after": [ "y", "$" ]
        },
        {
            "before": [ "z", "j" ],
            "after": [ "o", "<ESC>", "k" ]
        },
        {
            "before": [ "z", "k" ],
            "after": [ "O", "<ESC>", "j" ]
        },
        {
            "before": [ "z", "l" ],
            "after": [ "a", " ", "<ESC>" ]
        },
        {
            "before": [ "<leader>", "h" ],
            "commands": [ ":nohl" ]
        },
        {
            "before": [ "<leader>", "b" ],
            "commands": [ ":ls" ]
        },
        {
            "before": [ "<leader>", "y" ],
            "after": [ "\"", "a", "y", "y"]
        },
        {
            "before": [ "<leader>", "Y" ],
            "after": [ "\"", "a", "y", "$"]
        },
        {
            "before": [ "<leader>", "p" ],
            "after": [ "\"", "a", "p" ]
        },
        {
            "before": [ "<leader>", "P" ],
            "after": [ "\"", "a", "P" ]
        },
        {
            "before": [ "<leader>", "d" ],
            "after": [ "\"", "a", "d", "d"]
        },
        {
            "before": [ "<leader>", "D" ],
            "after": [ "\"", "a", "D"]
        },
        {
            "before": [ "<C-d>" ],
            "after": [ "<C-d>", "z", "z" ]
        },
        {
            "before": [ "<C-u>" ],
            "after": [ "<C-u>", "z", "z" ]
        },
        {
            "before": [ "<leader>", "e", "w" ],
            "commands": ["editor.emmet.action.wrapWithAbbreviation"]
        },
        {
            "before": [ "<leader>", "e", "r" ],
            "commands": ["editor.emmet.action.removeTag"]
        },
        {
            "before": [ "<leader>", "e", "p" ],
            "commands": ["editor.emmet.action.matchTag"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [ ">" ],
            "after": [ ">", "g", "v" ]
        },
        {
            "before": [ "<" ],
            "after": [ "<", "g", "v" ]
        },
        {
            "before": [ "<leader>", "y" ],
            "after": [ "\"", "a", "y"]
        },
        {
            "before": [ "<leader>", "d" ],
            "after": [ "\"", "a", "d"]
        },
        {
            "before": [ "<leader>", "p" ],
            "after": [ "\"", "a", "p" ]
        },
    ],

    // Files
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        // "**/node_modules": true,
        "**/package-lock.json": true
    },
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "explorer.confirmDragAndDrop": false,
    "errorLens.removeLinebreaks": false,
    "git.openRepositoryInParentFolders": "never",
    "code-runner.runInTerminal": true,
    "search.quickOpen.includeHistory": false,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.enabled": false,
    "telemetry.telemetryLevel": "off",
}
